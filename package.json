{
  "name": "cctron",
  "version": "1.0.0",
  "description": "A cross-platform client which understands cctray xml spec",
  "scripts": {
    "build": "tsc && copyfiles assets/* dist && copyfiles config.json dist/",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "yarn build && electron ./dist/main.js",
    "package": "yarn electron-builder -ml"
  },
  "main": "dist/main.js",
  "build": {
    "files": [
      "dist/**/*",
      "package.json"
    ]
  },
  "keywords": [
    "cctray",
    "Electron",
    "typescript"
  ],
  "author": "Philipp Thomas",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "copyfiles": "^2.4.1",
    "electron": "^24.1.2",
    "electron-builder": "^24.6.3",
    "eslint": "^8.39.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "fast-xml-parser": "^4.2.2",
    "keytar": "^7.9.0"
  }
}
