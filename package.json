{
  "name": "cctron",
  "version": "1.1.0",
  "description": "A cross-platform client which understands cctray xml spec",
  "private": "true",
  "scripts": {
    "build": "tsc && copyfiles assets/* dist && copyfiles config.json dist/ && copyfiles -u 1 src/ipc/* dist",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "yarn build && electron ./dist/main.js",
    "package": "yarn electron-builder -p never"
  },
  "main": "dist/main.js",
  "build": {
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "icon": "assets/icon.icns"
    }
  },
  "keywords": [
    "cctray",
    "Electron",
    "typescript"
  ],
  "author": {
    "name": "Philipp Thomas",
    "email": "john@doe.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "copyfiles": "^2.4.1",
    "electron": "^24.1.2",
    "electron-builder": "^24.6.3",
    "eslint": "^8.39.0",
    "semantic-release": "^24.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "fast-xml-parser": "^4.2.2",
    "keytar": "^7.9.0",
    "reflect-metadata": "^0.2.1",
    "tsyringe": "^4.8.0"
  }
}
